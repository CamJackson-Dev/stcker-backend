{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "npm run copy",
    "clean": "rm -rf dist",
    "copy": "cp -r ./src/templates ./dist/",
    "dev": "nodemon",
    "preinstall": "npm i -g typescript pm2 @mapbox/node-pre-gyp",
    "start": "pm2-runtime start ecosystem.config.js",
    "watch": "npm run copy & tsc -w  -p tsconfig.build.json",
    "test:unit": "jest --watch --detectOpenHandles --testPathPattern=./src",
    "test:integration:auth": "jest --watch --detectOpenHandles --testPathPattern=./tests/auth",
    "test:integration:user": "jest --watch --detectOpenHandles --testPathPattern=./tests/user",
    "test:integration:order": "jest --watch --detectOpenHandles --testPathPattern=./tests/order",
    "test:integration:request": "jest --watch --detectOpenHandles --testPathPattern=./tests/request"
  },
  "author": "Ekene Onyekaba",
  "license": "ISC",
  "dependencies": {
    "@paypal/checkout-server-sdk": "^1.0.2",
    "@sendgrid/mail": "^7.4.2",
    "apollo-server-express": "^2.21.2",
    "aws-sdk": "^2.908.0",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.1",
    "class-validator": "^0.13.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "fastest-validator": "^1.10.0",
    "google-auth-library": "^7.0.4",
    "graphql": "^15.5.0",
    "handlebars": "^4.7.7",
    "helmet": "^4.4.1",
    "ioredis": "^4.27.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.3",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.11",
    "@types/express-jwt": "^6.0.1",
    "@types/ioredis": "^4.26.4",
    "@types/jest": "^26.0.22",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/mongoose": "^5.10.4",
    "@types/node": "^14.14.35",
    "@types/supertest": "^2.0.11",
    "jest": "^26.6.3",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.4"
  }
}
